<!-- Configuration for Notifier -->
<application>
  <!-- Driver for connecting to sites database -->
  <init-param>
    <param-name>DatabaseDriver</param-name>
    <param-value>@GKDRIVER@</param-value>
  </init-param>
  <init-param>
      <param-name>GKHOST</param-name>
      <param-value>@GKHOST@</param-value>
  </init-param>
  <init-param>
      <param-name>GKUSER</param-name>
      <param-value>@GKUSER@</param-value>
  </init-param>
  <init-param>
      <param-name>GKUSERPW</param-name>
      <param-value>@GKUSERPW@</param-value>
  </init-param>
  <!-- Web address for CFS Web Server to retrieve messages from -->
  <init-param>
    <param-name>CFSWebServer</param-name>
    <param-value>127.0.0.1</param-value>
  </init-param>
  <init-param>
    <param-name>FileLibrary</param-name>
    <param-value>@FILELIBRARY@</param-value>
  </init-param>
  <init-param>
    <param-name>MailServer</param-name>
    <param-value>mail.darkhorseventures.com</param-value>
  </init-param>
  <!-- Remote Hylafax fax server -->
  <init-param>
    <param-name>FaxServer</param-name>
    <param-value>216.54.13.15</param-value>
  </init-param>
	<init-param>
    <param-name>FaxEnabled</param-name>
    <param-value>false</param-value>
  </init-param>
  <!-- Temporary folder for fax images -->
  <init-param>
    <param-name>BaseDirectory</param-name>
    <param-value>faxFiles</param-value>
  </init-param>
  <init-param>
    <param-name>BaseFilename</param-name>
    <param-value>cfsfax</param-value>
  </init-param>
</application>
