        sb.append("tmp");
        //sb.append(") {\n\t");
        sb.append(") { ");
        sb.append("this.");
        sb.append(resultVariable);
        sb.append(" = ");
        //sb.append(resultVariable);
        sb.append("Integer.parseInt(tmp)");
        //sb.append(";\n}\n");
        sb.append("; }\n");
        setText.append(sb.toString());
      }
      
      if ("double".equals(resultType)) {
        sb = new StringBuffer();
        sb.append(indent);
        sb.append("public ");
        sb.append("void set");
        sb.append(c);
        sb.append(resultVariable.substring(1));
        sb.append("(");
        sb.append("String");
        sb.append(" ");
        //sb.append(resultVariable);
        sb.append("tmp");
        //sb.append(") {\n\t");
        sb.append(") { ");
        sb.append("this.");
        sb.append(resultVariable);
        sb.append(" = ");
        //sb.append(resultVariable);
        sb.append("Double.parseDouble(tmp)");
        //sb.append(";\n}\n");
        sb.append("; }\n");
        setText.append(sb.toString());
      }
      
      if ("long".equals(resultType)) {
